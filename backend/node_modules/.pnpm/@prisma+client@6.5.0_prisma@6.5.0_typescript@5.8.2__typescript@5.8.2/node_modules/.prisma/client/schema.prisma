datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum CategoryType {
  FOOD
  TRANSPORT
  CARD
  BILLS
  ENTRETAINMENT
  TRIPS
}

model User {
  id        String    @id @default(uuid())
  email     String
  birthDate String
  name      String
  sureName  String
  password  String
  street    String
  city      String
  state     String
  zipCode   String
  country   String
  Expenses  Expense[]
  Cards     Card[]
  Banks     Bank      @relation(fields: [bankId], references: [id])
  bankId    String
}

model Card {
  id     String  @id @default(uuid())
  User   User?   @relation(fields: [userId], references: [id])
  userId String?
}

model Bank {
  id   String @id @default(uuid())
  User User[]
}

model Expense {
  id          String   @id @default(uuid())
  amount      Float
  description String
  category    Category @relation(fields: [categoryId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  categoryId  String
  user        User     @relation(fields: [userId], references: [id])
  userId      String
}

model Category {
  id      String       @id @default(uuid())
  type    CategoryType
  Expense Expense[]
}
